<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Kind</th>
    <th>Story</th>
    <th>Position</th>
    <th>Complete</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.description %></td>
    <td><%= task.kind %></td>
    <td><%= task.story_id %></td>
    <td><%= task.position %></td>
    <td><%= task.complete %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

